//Codeforces 630I - Parking lot

#include <iostream>

using namespace std;

long long binpow(long long a, int b)
{
    long long r=1 ;
    while(b) {
        if (b&1) {
            r*=a ;
        }
        a*=a ;
        b>>=1 ;
    }
    return r ;
}

int main()
{
    int n ;
    cin>>n ;
    cout<<(9*n-3)*binpow(4,n-3) ;
    return 0;
}
